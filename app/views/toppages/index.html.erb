<% if logged_in? %>
<div class="text-center">
  <h1>ログイン済です</h1>
</div>

<p class="text-center">ユーザ名: <%= current_user.name %></p>

<div class="row">
  <aside class="col-md-4">
    <%= form_for(@task) do |f| %>
      <div class="form-group">
        <%= f.text_area :content, class: 'form-control', rows: 5 %>
      </div>
      <%= f.submit 'Post', class: 'btn btn-primary btn-block' %>
    <% end %>
  </aside>
  
  <div class="col-xs-8">
    <!--%= render 'tasks/tasks', tasks: @tasks %>-->
    <!--task_list  -->
    <ul class="media-list">
      <!--% tasks.each do |task| %>-->
      <% @tasks.each do |task| %>
        <% user = task.user %>
        <li class="media">
          <div class="media-left">
            <img class="media-object img-rounded" src="<%= gravatar_url(user, options = { size: 50 }) %>" alt="">
          </div>
          <div class="media-body">
            <div>
              <%= link_to user.name, user_path(user) %> <span class="text-muted">posted at <%= task.created_at %></span>
            </div>
            <div>
              <p><%= task.content %></p>
            </div>
          </div>
        </li>
      <% end %>
      
      <!--%= paginate tasks %>-->
    </ul>
  </div>
</div>


<% else %>
<div class="center jumbotron">
  <div class="text-center">
    <h1>ようこそ、タスク管理アプリへ</h1>
    <%= link_to 'サインアップ', signup_path, class: 'btn btn-lg btn-primary' %>
  </div>
</div>
<% end %>